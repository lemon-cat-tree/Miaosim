.home-container {
  padding: 20rpx;
}

.banner {
  width: 100%;
  height: 300rpx;
  background-color: #ccc;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}

.menu-grid {
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.menu-item {
  width: 25%;
  text-align: center;
  margin-bottom: 30rpx;
}

.menu-item image {
  width: 80rpx;
  height: 80rpx;
}

.menu-item text {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-top: 10rpx;
}