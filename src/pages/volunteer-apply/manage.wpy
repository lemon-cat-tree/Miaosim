<template>
  <view class="volunteer-manage-page">
    <view class="manage-header">
      <view class="title">蹇楁効鑰呯敵璇风鐞?/view>
      <view class="stats">
        <view class="stat-item">
          <view class="count">{{ pendingCount }}</view>
          <view class="label">寰呭鐞?/view>
        </view>
        <view class="stat-item">
          <view class="count">{{ approvedCount }}</view>
          <view class="label">宸查€氳繃</view>
        </view>
        <view class="stat-item">
          <view class="count">{{ rejectedCount }}</view>
          <view class="label">宸叉嫆缁?/view>
        </view>
      </view>
    </view>
    
    <view class="application-list">
      <view class="application-item" wx:for="{{ applicationList }}" wx:key="id">
        <view class="applicant-info">
          <image class="avatar" src="{{ item.avatar || '/static/images/default-avatar.png' }}"></image>
          <view class="info-text">
            <view class="name">{{ item.name }}</view>
            <view class="time">{{ item.applyTime }}</view>
          </view>
          <view class="status {{ item.status }}">{{ item.statusText }}</view>
        </view>
        
        <view class="application-content">
          <view class="reason">{{ item.reason }}</view>
        </view>
        
        <view class="action-buttons" wx:if="{{ item.status === 'pending' }}">
          <view class="btn approve" @tap="handleApprove(item.id)">閫氳繃</view>
          <view class="btn reject" @tap="handleReject(item.id)">鎷掔粷</view>
        </view>
      </view>
    </view>
  </view>
</template>

<script>
import wepy from 'wepy'
import { connect } from 'wepy-redux'

@connect({
  userInfo(state) {
    return state.user.info
  },
  userRole(state) {
    return state.user.role
  }
})
export default class VolunteerManage extends wepy.page {
  data = {
    applicationList: [],
    pendingCount: 0,
    approvedCount: 0,
    rejectedCount: 0
  }

  onLoad() {
    this.loadApplications()
  }

  async loadApplications() {
    try {
      // 杩欓噷搴旇璋冪敤瀹為檯鐨凙PI鑾峰彇蹇楁効鑰呯敵璇峰垪琛?
      // const res = await getVolunteerApplications()
      // this.applicationList = res.data
      
      // 妯℃嫙鏁版嵁
      this.applicationList = [
        {
          id: 1,
          name: '寮犱笁',
          avatar: '',
          applyTime: '2024-01-15 10:30',
          reason: '鎴戠儹鐖卞皬鍔ㄧ墿锛屽笇鏈涜兘涓烘祦娴尗鐙楁彁渚涘府鍔╋紝鏈夊厖瓒崇殑鏃堕棿鍙備笌蹇楁効娲诲姩銆?,
          status: 'pending',
          statusText: '寰呭鐞?
        },
        {
          id: 2,
          name: '鏉庡洓',
          avatar: '',
          applyTime: '2024-01-14 15:20',
          reason: '鏄竴鍚嶅ぇ瀛︾敓锛屽懆鏈椂闂村厖瑁曪紝鎰挎剰鍙備笌鏁戝姪娲诲姩銆?,
          status: 'approved',
          statusText: '宸查€氳繃'
        }
      ]
      
      this.calculateStats()
    } catch (err) {
      wx.showToast({ title: '鍔犺浇澶辫触', icon: 'none' })
    }
  }

  calculateStats() {
    this.pendingCount = this.applicationList.filter(item => item.status === 'pending').length
    this.approvedCount = this.applicationList.filter(item => item.status === 'approved').length
    this.rejectedCount = this.applicationList.filter(item => item.status === 'rejected').length
  }

  async handleApprove(id) {
    try {
      wx.showLoading({ title: '澶勭悊涓? })
      // await approveVolunteerApplication(id)
      // 鏇存柊鏈湴鏁版嵁
      const index = this.applicationList.findIndex(item => item.id === id)
      if (index !== -1) {
        this.applicationList[index].status = 'approved'
        this.applicationList[index].statusText = '宸查€氳繃'
      }
      this.calculateStats()
      wx.hideLoading()
      wx.showToast({ title: '宸查€氳繃', icon: 'success' })
    } catch (err) {
      wx.hideLoading()
      wx.showToast({ title: '鎿嶄綔澶辫触', icon: 'none' })
    }
  }

  async handleReject(id) {
    try {
      wx.showLoading({ title: '澶勭悊涓? })
      // await rejectVolunteerApplication(id)
      // 鏇存柊鏈湴鏁版嵁
      const index = this.applicationList.findIndex(item => item.id === id)
      if (index !== -1) {
        this.applicationList[index].status = 'rejected'
        this.applicationList[index].statusText = '宸叉嫆缁?
      }
      this.calculateStats()
      wx.hideLoading()
      wx.showToast({ title: '宸叉嫆缁?, icon: 'success' })
    } catch (err) {
      wx.hideLoading()
      wx.showToast({ title: '鎿嶄綔澶辫触', icon: 'none' })
    }
  }
}
</script>

